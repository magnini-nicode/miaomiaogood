				user_id,
			</if>
			<if test="bean.actionTime != null">
				action_time,
			</if>
		</trim>
		    VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
			<if test="bean.actionId!=null">
				#{bean.actionId},
			</if>
			<if test="bean.videoId!=null">
